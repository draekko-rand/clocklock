<preference-headers
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <header
        custom:id="@+id/preferences_clock_section"
        custom:fragment="com.draekko.clocklock.preference.ClockPreferences"
        custom:icon="@drawable/clock_preferences"
        custom:title="@string/clock_category" />

    <header
        custom:id="@+id/preferences_weather_section"
        custom:fragment="com.draekko.clocklock.preference.WeatherPreferences"
        custom:icon="@drawable/weather_preferences"
        custom:title="@string/weather_category" />

    <header
        custom:id="@+id/preferences_calendar_section"
        custom:fragment="com.draekko.clocklock.preference.CalendarPreferences"
        custom:icon="@drawable/calendar_preferences"
        custom:title="@string/calendar_category" />

    <header
        custom:id="@+id/preferences_advanced_section"
        custom:fragment="com.draekko.clocklock.preference.AdvancedPreferences"
        custom:icon="@drawable/advanced_preferences"
        custom:title="@string/advanced"/>

    <header
        custom:id="@+id/preferences_about_section"
        custom:key="about"
        custom:icon="@drawable/about_preferences"
        custom:title="@string/about">
        <intent android:action="com.draekko.clocklock.preference.About"/>
    </header>

</preference-headers>

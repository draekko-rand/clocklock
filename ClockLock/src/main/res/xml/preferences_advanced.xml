<com.draekko.traypreferences.TrayPreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    custom:key="advanced_settings"
    custom:title="@string/advanced">

    <com.draekko.traypreferences.TraySwitchPreference
        custom:key="USE_DEBUGGER"
        custom:title="@string/debugger"
        custom:defaultValue="false" />

    <com.draekko.traypreferences.TrayPreference
        custom:id="@+id/refresh_weather"
        custom:key="refresh_weather"
        custom:title="@string/weather_tap_to_refresh_weather">
        <intent android:action="com.draekko.clocklock.preference.RefreshWeather"/>
    </com.draekko.traypreferences.TrayPreference>

</com.draekko.traypreferences.TrayPreferenceScreen>
